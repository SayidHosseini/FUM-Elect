extends layout

block content
    h2.page-header= title

    errors
        if errors
            each error, i in errors
                if error.param === "failed"
                    div.p(style='color: #a70000', align='center') &emsp; #{error.msg}
                    - break
                if error.param === "success"
                    div.p(style='color: #008080', align='center') &emsp; #{error.msg}

    form(method="post", action="/users/login")
        .form-group
            label E-mail
            input.form-control(name="email", type="email", placeholder="Enter E-mail")
        .form-group
            label Password
            input.form-control(name="password", type="password", placeholder="Enter Password")

        input.btn.btn-primary(type='submit', name='submit', value='Login')